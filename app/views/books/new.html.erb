<span class="text-center">
  <%= form_for(@book) do |f| %>
    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, required: true %>
    </div>

    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author, required: true %>
    </div>

    <div class="field">
      <%= f.label :isbn %><br>
      <%= f.text_field :isbn, required: true %>
    </div>

    <div class="field">
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :cover %><br>
      <%= f.file_field :cover %>
    </div>

    <div class="field">
      <%= f.label :file %><br>
      <%= f.file_field :file, required: true %>
    </div>

    <br>
    <div class="actions">
      <%= link_to 'Back to Library', root_path, class: 'btn btn-danger' %>
      &nbsp;
      <%= f.submit 'Upload Book', class: 'btn btn-success' %>
    </div>
  <% end %>


</span>
